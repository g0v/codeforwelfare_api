<div class="span12">
  <div class="page-header">
    <%= render_ul_breadcrumbs %>
    <h1>
      法條管理
      <span class="pull-right">
        <%= link_to '新增', new_rule_path, :class => 'btn btn-primary' %>
      </span>
    </h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>編號</th>
        <th>法條名稱</th>
        <th>機關</th>
        <th>內容</th>
        <th>動作</th>
      </tr>
    </thead>
    <tbody>
      <% @rules.each do |rule| %>
        <tr>
          <td style="width:5%;"><%= rule.id %></td>
          <td><%= link_to(rule.title, rule_path(rule)) %></td>
          <td style="width:10%;"><%= link_to(rule.org.name, org_path(rule.org_id)) %></td>
          <td style="width:55%;"><%= safe_truncate_content(rule.content, 100) %></td>
          <td>
            <%= link_to '編輯', edit_rule_path(rule), :class => 'btn btn-mini' %>
            <%= link_to '刪除', rule_path(rule), :method => :delete, :data => { :confirm => '確定要刪除嗎？' }, :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @rules %>
</div>
