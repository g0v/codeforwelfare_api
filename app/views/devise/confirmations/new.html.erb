<h2>重送確認信</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => "form-inline" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "信箱" %>

  <%= f.submit "重送確認信", :class => "btn" %>
<% end %>

<%= render "devise/shared/links" %>
