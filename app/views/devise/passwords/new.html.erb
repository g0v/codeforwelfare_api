<h2>忘記密碼了嗎？</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-inline" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true, :placeholder => "信箱" %>

  <%= f.submit "寄出重設密碼信", :class => "btn" %>
<% end %>

<%= render "devise/shared/links" %>
