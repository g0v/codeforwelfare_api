<div class="span12">
  <div class="page-header">
    <%= render_ul_breadcrumbs %>
    <h1>標籤 - <%= @tag.name %></h1>
  </div>
  <dl class="dl-horizontal">
    <dt>英文名稱</dt>
    <dd><%= @tag.eng_name %></dd>
    <dt>數值</dt>
    <dd><%= @tag.value %></dd>
    <dt>公開確認</dt>
    <dd><%=t @rule.is_published %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to('返回', tags_path, :class => 'btn') %>
    <%= link_to('編輯', edit_tag_path(@tag), :class => 'btn') %>
    <%= link_to('刪除', tag_path(@tag), :method => 'delete', :confirm => "確定要刪除標籤 - #{@tag.name}", :class => 'btn btn-danger') %>
  </div>
</div>
