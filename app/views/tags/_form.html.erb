<%= form_for @tag, :validate => true, :html => {:class => "form-horizontal"} do |f| %>
  <div class="control-group">
    <%= f.label "名稱", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "英文名稱", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :eng_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "數值", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :value %>
    </div>
  </div>
  <div class="form-actions">
    <%= link_to('取消', tags_path, :class => "btn") %>
    <%= f.submit("送出", :class => 'btn btn-primary') %>
  </div>
<% end %>
