<div class="span12">
  <div class="page-header">
    <%= render_ul_breadcrumbs %>
    <h1>
      標籤管理
      <span class="pull-right">
        <%= link_to('新增', new_tag_path, :class => 'btn btn-primary') %>
      </span>
    </h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>編號</th>
        <th>標籤名稱</th>
        <th>英文名稱</th>
        <th>數值</th>
        <th>動作</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.id %></td>
          <td><%= link_to(tag.name, tag_path(tag)) %></td>
          <td><%= tag.eng_name %></td>
          <td><%= tag.value %></td>
          <td>
            <%= link_to('編輯', edit_tag_path(tag), :class => 'btn btn-mini') %>
            <%= link_to('刪除', tag_path(tag), :method => :delete, :data => { :confirm => '確定要刪除嗎？' }, :class => 'btn btn-mini btn-danger') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @tags %>
</div>
